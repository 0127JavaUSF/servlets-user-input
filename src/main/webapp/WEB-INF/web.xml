<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>kitten-servlet</servlet-name>
		<servlet-class>com.revature.servlets.KittenServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>DogServlet</servlet-name>
		<display-name>DogServlet</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.DogServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FoodServlet</servlet-name>
		<display-name>FoodServlet</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.FoodServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>kitten-servlet</servlet-name>
		<url-pattern>/kittens</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DogServlet</servlet-name>
		<url-pattern>/dogs</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FoodServlet</servlet-name>
		<url-pattern>/food/*</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
